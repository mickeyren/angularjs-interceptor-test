<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Angular v1.6.6 Interceptor Test</title>
  </head>

  <body ng-app="app">
    <div class="container d-flex align-items-center h-100" ng-controller="AppCtrl">
      <div class="row no-gutters justify-content-center w-100">
        {{> header}}
        
        <div class="card text-center w-100">
          <div class="card-header">
            <form name="inputForm">
              <div class="form-group row">
                <div class="col-8">
                  <input type="text" class="form-control form-control-lg" placeholder="Required, max length 50" maxlength="50" ng-model="url" ng-keyup="$event.keyCode == 13 ? makeRequest($event) : null" /> 
                </div>
                <div class="col-4">
                  <input type="number" class="form-control form-control-lg" min="0" max="10000" step=".01" ng-model="number"  />
                </div>
              </div>          
            </form>
          </div>
          
          <ul class="list-group list-group-flush"></ul>
        </div>
        {{> footer}}
      </div>  
    </div>
  </body>

</html>
